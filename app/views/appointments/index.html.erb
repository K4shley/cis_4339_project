<p id="notice"><%= notice %></p>
<div class = "content">
<h1 class = "title">Appointments</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Start time</th>
      <th>Date</th>
      <th>Employee</th>
      <th>Activity</th>
      <th>Price</th>
      <%#<th>Duration</th>%>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody >
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.customer_name %></td>
        <td><%= appointment.timeslot.start_time.strftime("%I:%M %p") %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.employee.first_name %></td>
        <td><%= appointment.activity.name %></td>
        <td><%= number_to_currency(appointment.activity.price) %></td>
        <%#<td><%= appointment.activity.duration %><%#</td>%>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Delete', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class = "new"><%= link_to 'New Appointment', new_appointment_path %></div>
</div>