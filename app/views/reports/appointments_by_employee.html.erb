<br><div class="content"><h1>Appointment Invoices By Employee</h1>

  <%= form_tag ("create1") do %>


      <div class ="field"> <%= label "employees","employee_id" %>
        <%= collection_select :employees, :employee_id, Employee.all, :id, :first_last_name, :prompt => true %>

      </div>

      <%= button_tag("Submit") %>
     <br><br> <%= link_to 'Back', reports_path %>
  <% end %>

  <% unless @appointments.nil? %>
      <table class ="table">
        <th>Customer Name</th>
        <th>Date</th>
      <% @appointments.each do |app| %>
          <tr>
          <td><%= app.customer_name %></td>
           <td> <%= link_to app["date"], appointment_path(app["id"])%></td>
          </tr>
      <% end %>
    </table>
  <% end %>
</div>