<div class="content"><h1>Appointment Invoices By Date</h1>

<%= form_tag ("create") do %>

<div class= "field"> <%= label "dates","start_date" %><%= text_field "dates","start_date" %></div>
      <div class= "field"><%= label "dates","end_date" %><%= text_field "dates","end_date" %> </div>
<%= button_tag("Submit") %>
    <br><br>  <%= link_to 'Back', reports_path %>

<% end %>

<% unless @appointments.nil? %>
      <table class ="table">
        <th>Employee</th>
        <th>Date</th>
<% @appointments.each do |app| %>
<tr>
  <td><%= app.employee.first_name %></td>
  <td><%= link_to app["date"], appointment_path(app["id"])%></td>
  </tr>
<% end %>
</table>
<% end %>
</div>