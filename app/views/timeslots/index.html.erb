<p id="notice"><%= notice %></p>
<div class = "content">
<h1 class = "title" >Timeslots</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody >
    <% @timeslots.each do |timeslot| %>
      <tr>
        <td><%= timeslot.start_time.strftime("%I:%M %p") %></td>
        <td><%= timeslot.end_time.strftime("%I:%M %p") %></td>
        <td><%= link_to 'Show', timeslot %></td>
        <td><%= link_to 'Edit', edit_timeslot_path(timeslot) %></td>
        <td><%= link_to 'Delete', timeslot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class = "new"><%= link_to 'New Timeslot', new_timeslot_path %></div>
</div>